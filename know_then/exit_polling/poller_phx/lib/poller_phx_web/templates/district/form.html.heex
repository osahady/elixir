<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="error">
      <p>Oops, something went wrong! Please check the error below.</p>
    </div>
  <% end %>
  <%= label f, :name %>
  <%= text_input f, :name %>
  <%= error_tag f, :name %>

  <div>
    <%= submit "Save" %>
    <%= link "Cancel", to: Routes.district_path(@conn, :index) %>
  </div>
<% end %>